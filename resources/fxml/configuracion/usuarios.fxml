<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="798.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ar.edu.ues21.seminario.controller.UsuariosController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="20" right="20" top="20" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="section-title" text="Gestión de Usuarios">
                    <font>
                        <Font size="12.0" />
                    </font></Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#nuevoUsuario" styleClass="action-button, primary-button" text="Nuevo Usuario">
                    <graphic>
                        <FontAwesomeIcon glyphName="PLUS" size="12" />
                    </graphic>
                </Button>
            </HBox>
            <Separator />
        </VBox>
    </top>
    <center>
        <VBox spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="0" />
            </padding>

            <!-- Formulario de usuario -->
            <GridPane fx:id="formUsuario" hgap="15" styleClass="form-container" vgap="15">

                <columnConstraints>
                    <ColumnConstraints percentWidth="50.0" />
                    <ColumnConstraints percentWidth="50.0" />
                </columnConstraints>

                <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label styleClass="form-section-title" text="Información de acceso" />

                    <Label styleClass="field-label" text="Nombre de Usuario" />
                    <TextField fx:id="idAdminField" styleClass="form-field" />

                    <Label styleClass="field-label" text="Contraseña" />
                    <PasswordField fx:id="contrasenaField" styleClass="form-field" />
                </VBox>

                <HBox alignment="BOTTOM_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                    <Button onAction="#cancelarEdicion" styleClass="action-button" text="Cancelar" />
                    <Button styleClass="action-button, primary-button" text="Guardar" />
                </HBox>

                <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <children>
                  <Label styleClass="form-section-title" text="Rol" />
                  <Label styleClass="field-label" text="Seleccionar roles" />
                  <ListView prefHeight="115.0" prefWidth="371.0" styleClass="form-field" />
               </children>
                </VBox>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <!-- Tabla de usuarios -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label styleClass="table-title" text="Listado de Usuarios" />
                    <Region HBox.hgrow="ALWAYS" />
                    <ComboBox fx:id="filtroUsuarios" promptText="Filtrar por..." />
                </HBox>

                <TableView fx:id="tablaUsuarios" styleClass="data-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colIdUsuario" prefWidth="39.0" text="ID" />
                        <TableColumn fx:id="colNombre" prefWidth="195.0" text="Nombre de usuario" />
                        <TableColumn fx:id="colFechaAlta" minWidth="0.0" prefWidth="113.0" text="Fecha de alta" />
                        <TableColumn fx:id="colFechaBaja" prefWidth="163.0" text="Fecha de baja" />
                        <TableColumn fx:id="colEstado" prefWidth="116.0" text="Estado" />
                        <TableColumn fx:id="colAcciones" minWidth="8.0" prefWidth="73.0" text="Acciones" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
